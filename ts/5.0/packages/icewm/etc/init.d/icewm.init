#! /bin/sh

. $TS_GLOBAL

case "$1" in  
init)
    if ! pkg_initialized $PACKAGE; then
	pkg_set_init_flag $PACKAGE
	icewmtheme="xp"
	if [ ! -z "$ICEWM_THEME" ] ; then 
	    icewmtheme=$ICEWM_THEME
	fi
	echo "Theme=$icewmtheme/default.theme" > /etc/icewm/theme
	ln -s /etc/icewm $HOME/.icewm
    fi
    ;;
  *)
    exit 1
    ;;
esac

exit 0
