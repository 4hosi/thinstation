#! /bin/sh

. $TS_GLOBAL

case "$1" in  
init)
    if ! pkg_initialized $PACKAGE; then

	if [ ! -z "$NET_TIME_SERVER" ]; then
	  rdate -s $NET_TIME_SERVER >> $LOGFILE 2>&1
	  echo "1 * * * * rdate -s $NET_TIME_SERVER" >> /tmp/crontab
	  crontab /tmp/crontab
	fi

	pkg_set_init_flag $PACKAGE
    fi
    ;;
help)
    echo "Usage: $0 init"
    ;;
  *)
    exit 1
    ;;
esac

exit 0
