#! /bin/sh

. /etc/thinstation.global

case "$1" in
  init)
      if ! pkg_initialized $PACKAGE; then
          touch /var/log/freerdp
#          touch $HOME/.rdesktop # prevents creating this directory
          pkg_set_init_flag $PACKAGE
      fi
      ;;
  console)
      ;;
  window)
      ;;
  fullscreen)
      ;;
  help)
      echo "Usage: $0 init"
      ;;
  *)
      exit 1
      ;;
  esac
exit 0
