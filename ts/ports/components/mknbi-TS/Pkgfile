# Description: Thinstation essential package
# URL: http://www.thinstation.org
# Maintainer: Donald A. Cupp Jr. (don cupp jr at ya hoo dot com)

name=mknbi-TS
pname=${name%-*}
version=1.4.4
release=1
source=(http://ftp.de.debian.org/debian/pool/main/m/$pname/${pname}_$version.orig.tar.gz)

build() {
	cd $pname-$version

	./configure --prefix=/ \
			--exec-prefix=/ \
			--sysconfdir=/etc \
			--libexecdir=/lib \
			--mandir=/usr/man \
			--disable-extras

	make
	make DESTDIR=$PKG install
}
