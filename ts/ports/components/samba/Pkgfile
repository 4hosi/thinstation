# Description: Thinstation essential package
# URL: http://www.thinstation.org
# Maintainer: Donald A. Cupp Jr. (don cupp jr at ya hoo dot com)

name=samba
version=3.6.9
release=1
source=(http://www.samba.org/samba/ftp/stable/$name-$version.tar.gz)

build() {
	cd $name-$version/source3

	./configure 	--with-configdir=/etc \
			--prefix=/usr \
			--with-included-popt \
			--disable-swat \
			--disable-smbtorture4 \
			--enable-cups \
			--enable-iprint \
			--enable-relro \
			--enable-shared-libs \
			--enable-external-libtalloc \
			--disable-avahi \
			--without-libtalloc \
			--without-dmapi \
			--without-ldap \
			--without-ads \
			--without-dnsupdate \
			--without-pam \
			--without-pam_smbpass \
			--without-sys-quotas \
			--without-utmp \
			--without-cluster-support

	make
	make DESTDIR=$PKG install
rm -rf $PKG/swat $PKG/share
#rm -rf $PKG/{include,share,swat}
#mkdir -p $PKG/$TSCOMPROOT/$pname
#mv $PKG/{private,sbin,var,lib,bin} $PKG/$TSCOMPROOT/$pname/.
}
