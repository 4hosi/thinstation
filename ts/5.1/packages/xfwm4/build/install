#!/bin/sh

export PACKAGE=xfwm4
export PORTS="gtk-engines perl p5-xml-parser openssh dbus-glib exo freetype garcon upower notification-daemon-xfce \
gdk-pixbuf gtk-xfce-engine xorg-libxi xorg-libxcursor xorg-xinput thunar-volman xkeyboard-config \
libexif libjpeg libnotify libpng libwnck libxfce4ui libxfce4util p5-uri startup-notification terminal thunar tumbler \
vte xdg-user-dirs libglade xfce4 xfce4-appfinder xfce4-panel xfce4-session xfwm4-themes \
xfce4-settings xfconf xfdesktop xfwm4 xorg-iceauth xorg-xinit xorg-xrdb"
export DROP_DIRS="lib/xfce4/backdrops lib/xfce4/session lib/xfce4/xfwm4 lib/xfce4/dev-tools lib/backgrounds lib/locale"

repackage -e

for theme in `ls -A --color=never ./packages/$PACKAGE/lib/themes`; do
	if [ "$theme" != "Default" ]; then
		rm -rf ./packages/$PACKAGE/lib/themes/$theme
	fi
done
returnval=$?

exit $returnval
