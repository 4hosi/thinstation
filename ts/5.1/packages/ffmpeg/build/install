#!/bin/sh

INSTALLDIR=./packages/ffmpeg
EXTRADIR=$INSTALLDIR/build/extra
TMPDIR=./build-ffmpeg

for i in ffmpeg faac lame libmp4v2 libogg libtheora libvorbis libxvid opencore-amr speex x264 ; do
	repackage $i -t $TMPDIR
	cp -Prf $TMPDIR/$i/* $INSTALLDIR/.
	rm -rf $TMPDIR
done
ln -sf libxvidcore.so.4.3 $INSTALLDIR/lib/libxvidcore.so.4
#cp -Prf $EXTRADIR/* $INSTALLDIR/.

returnval=$?

exit $returnval
