#/etc/profile: system-wide .profile file for ash.

. /etc/thinstation.global
umask 022

if [ "$TERM" == "xinit" ] ; then
	clear
	echo -e '\033[?1c'
	if ! pkg_initialized home; then
		pkg_set_init_flag home
		for file in `ls -A /etc/skel`; do
			cp -a /etc/skel/$file $HOME/. 2>/dev/null
		done
	fi
	check_last_session
	exec xinit /etc/xinitrc -- /etc/xserverrc 2>&1 >> /var/run/applications/session.$$
	error=$?
	if [ "$error" != "0" ]; then
		echo "Something went wrong! Starting the shell instead"
		echo "exit code was $error"
	else
		exit $error
	fi
fi

alias ll='ls -l'
alias l='ls -l'

if pkg_initialized e3 ; then
        alias vi='e3vi'
fi

